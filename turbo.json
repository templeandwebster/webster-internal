{
  "$schema": "https://turbo.build/schema.json",
  // "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        ".cache/**"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "outputs": [
        ".eslintcache"
      ]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
} 